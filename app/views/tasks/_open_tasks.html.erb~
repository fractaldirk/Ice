<%- model_class = Task -%>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:due_date) %></th>
      <th><%= model_class.human_attribute_name(:by_whom) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <% if task.status == 1 %>
      <tr>
        <td><%= link_to task.title, task_path(task), :style => "color: #280000;" %></td>
        <td><%= truncate(task.description, :lenght => 24) %></td>
        <td><%= task.due_date %></td>
        <td><%= task.by_whom_output %></td>
        <td><%= task.status_output %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_task_path(task), :class => 'btn btn-mini' %>
        </td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
