<%= form_for @task, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :due_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :due_date, :class => 'date_select', :order => [:day, :month, :year], :start_year => 2013 %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :by_whom, :class => 'control-label' %>
    <div class="controls">
      <%= f.select(:by_whom, [['Open', '3'], ['Chef', '1'], ['Chef Walnoot', '2']]) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :status, :class => 'control-label' %>
    <div class="controls">
      <%= f.select(:status, [['Raw', '1'], ['Medium rare', '2'], ['Bacon!', '3']]) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :dropbox_location, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :dropbox_location, :class => 'text_field', :placeholder => 'Put here the direct online link' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                tasks_path, :class => 'btn' %>
  </div>
<% end %>
