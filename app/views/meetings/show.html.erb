<%- model_class = Meeting -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @meeting.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:meeting_date) %>:</strong></dt>
  <dd><%= @meeting.meeting_date %></dd>
  <% if @meeting.content.present? %>
    <dt><strong><%= model_class.human_attribute_name(:content) %>:</strong></dt>
    <dd><%= @meeting.content %></dd>
  <% end %>
  <dt><strong><%= model_class.human_attribute_name(:attendents) %>:</strong></dt>
  <dd><%= @meeting.attendents %></dd>
  <dt><strong><%= model_class.human_attribute_name(:place) %>:</strong></dt>
  <dd><%= @meeting.place %></dd>
  <% if @meeting.agenda.present? %>
    <dt><strong>Dropbox link:</strong></dt>
    <dd><%= link_to "Agenda(link)", @meeting.agenda , :target => "_blank" %></dd>
  <% end %>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              meetings_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_meeting_path(@meeting), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              meeting_path(@meeting),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
