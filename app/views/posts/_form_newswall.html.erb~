<%= form_for @post, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :body, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :body, :class => 'text_area_post' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :dropbox_location, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :dropbox_location, :class => 'text_field' %>
    </div>
  </div>
  <div class="hidden">
    <%= f.label :poster, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :poster, :class => 'text_field', :value => current_user.user_name %>
      <%= f.number_field :sort, :value => 2 %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                posts_path, :class => 'btn' %>
  </div>
<% end %>
