<div class="span1">
  <%= link_to 'Back', "/posts/overview", :class => "btn btn-warning" %>
</div>

<div class="span10">

  <%- model_class = Post -%>
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human %></h1>
  </div>

  <div class="form-actions">
    <h4><%= @post.title %></h4><p><em>by <%= @post.poster %></em>
    <%= link_to t('.back', :default => t("helpers.links.back")),
                posts_path, :class => 'btn-mini btn'  %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_post_path(@post), :class => 'btn-mini btn' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                post_path(@post),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn-mini btn-danger' %></p>
  </div>

  <p><%= simple_format @post.body %></p>
    <% if @post.dropbox_location.present? %>
      <p>Dropbox location: <%= link_to "Dropbox(link)", @post.dropbox_location, :target => "_blank" %></p>
    <% end %>

  <hr />

  <% if @post.comments.present? %>
    <h4 style="color: #C00000;">Comments</h4>
    <p style="color: #330000;"><%= render @post.comments %><hr /></p>
  <% end %>

  <h4 style="color: #C00000;">Add a comment:</h4>
  <%= render "comments/form" %>

</div>

<div class="span1">

</div>
